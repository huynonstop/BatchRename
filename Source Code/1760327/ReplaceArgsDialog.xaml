<Window x:Class="_1760327.ReplaceArgsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1760327"
        mc:Ignorable="d"
        Title="Edit Replace" Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Text to be replaced:" FontSize="12" TextWrapping="Wrap" Margin="10,12,316.6,168"  VerticalAlignment="Center"/>
        <TextBox x:Name="needleTextbox" Margin="92,12,38.6,168"/>
        <TextBlock Text="Replace with:" FontSize="12" TextWrapping="Wrap" Margin="10,67,316.6,113"  VerticalAlignment="Center"/>
        <TextBox x:Name="hammerTextbox" Margin="92,67,38.6,113"/>

        <Button x:Name="saveButton" Content="SAVE" IsDefault="True" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            Click="SaveButton_Click" Margin="92,147,180.6,33"/>
        <Button x:Name="cancleButton" Content="CANCLE" IsCancel="True" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            Margin="240,147,38.6,33"/>
    </Grid>
</Window>
